# GeoServer Environment Variables
# Copy this file to .env and update the values

# ============================================
# ADMIN CREDENTIALS (CHANGE THESE!)
# ============================================
GEOSERVER_ADMIN_USER=admin
GEOSERVER_ADMIN_PASSWORD=ChangeThisStrongPassword123!

# ============================================
# JVM MEMORY SETTINGS (16GB RAM Optimized)
# ============================================
# Initial heap size (recommended: 50% of total RAM)
INITIAL_MEMORY=8G
# Maximum heap size (recommended: 75% of total RAM)
MAXIMUM_MEMORY=12G

# ============================================
# GEOSERVER CONFIGURATION
# ============================================
# Disable sample/demo data loading
SAMPLE_DATA=false

# Enable JSONP for cross-origin requests
ENABLE_JSONP=true

# Maximum number of filter rules
MAX_FILTER_RULES=20

# Line width optimization
OPTIMIZE_LINE_WIDTH=false

# ============================================
# PROXY/URL CONFIGURATION
# ============================================
# Base URL for GeoServer (change if using reverse proxy)
PROXY_BASE_URL=http://localhost:8080/geoserver

# HTTP proxy settings (optional)
HTTP_PROXY_NAME=
HTTP_PROXY_PORT=

# ============================================
# EXTENSIONS
# ============================================
# Stable extensions (comma-separated)
# Available: wps-extension, querylayer-plugin, css-plugin, importer-plugin, etc.
STABLE_EXTENSIONS=jai-ext,imagemosaic-jdbc-plugin,pyramid-plugin

# Community extensions (comma-separated)
COMMUNITY_EXTENSIONS=

# ============================================
# TOMCAT SETTINGS
# ============================================
# Connection timeout (milliseconds)
HTTP_CONNECTION_TIMEOUT=20000

# HTTP compression
HTTP_COMPRESSION=on

# Redirect port
HTTP_REDIRECT_PORT=8443
